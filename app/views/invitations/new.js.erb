<% if @at_max_trial_invitations == true %>
  $('.modal-header h3').html("Trial Account");
  $('.modal-body').html('<%= escape_javascript(flash[:warning]) %>');
<% else %>
  $('.modal-header h3').html("Add a invitation");
  $('.modal-body').html('<%= escape_javascript(render 'form') %>');
  $('.modal-footer').append('<%= escape_javascript(render 'form_actions') %>');
<% end %>
$('.modal').modal('toggle');

