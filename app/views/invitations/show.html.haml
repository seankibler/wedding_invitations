- model_class = Invitation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @invitation.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @invitation.last_name
%p
  %strong= model_class.human_attribute_name(:street) + ':'
  %br
  = @invitation.street
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @invitation.city
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @invitation.state
%p
  %strong= model_class.human_attribute_name(:zip) + ':'
  %br
  = @invitation.zip
%p
  %strong= model_class.human_attribute_name(:additional_guests) + ':'
  %br
  = @invitation.additional_guests
%p
  %strong= model_class.human_attribute_name(:kids) + ':'
  %br
  = @invitation.kids
%p
  %strong= model_class.human_attribute_name(:group_id) + ':'
  %br
  = @invitation.group.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), invitations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_invitation_path(@invitation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), invitation_path(@invitation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
