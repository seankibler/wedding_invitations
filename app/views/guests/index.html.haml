- model_class = Guest
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:address)
      %th= model_class.human_attribute_name(:size)
      %th= model_class.human_attribute_name(:additional_guests)
      %th= model_class.human_attribute_name(:kids)
      %th= model_class.human_attribute_name(:family_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @guests.each do |guest|
      %tr
        %td= guest.name
        %td= guest.address
        %td= guest.size
        %td= guest.additional_guests
        %td= guest.kids
        %td= guest.family.name if guest.family.present?
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_guest_path(guest), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), guest_path(guest), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_guest_path, :class => 'btn btn-primary'
