- model_class = Guest
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:street)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:zip)
      %th= model_class.human_attribute_name(:additional_guests)
      %th= model_class.human_attribute_name(:kids)
      %th= model_class.human_attribute_name(:family_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @guests.each do |guest|
      %tr
        %td= link_to guest.id, guest_path(guest)
        %td= guest.first_name
        %td= guest.last_name
        %td= guest.street
        %td= guest.city
        %td= guest.state
        %td= guest.zip
        %td= guest.additional_guests
        %td= guest.kids
        %td= guest.family_id
        %td=l guest.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_guest_path(guest), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), guest_path(guest), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_guest_path, :class => 'btn btn-primary'
